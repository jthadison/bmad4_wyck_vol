# Database Configuration
POSTGRES_USER=wyckoff_user
POSTGRES_PASSWORD=changeme
POSTGRES_DB=wyckoff_db
DATABASE_URL=postgresql+psycopg://wyckoff_user:changeme@localhost:5432/wyckoff_db

# Market Data API Keys
POLYGON_API_KEY=your_polygon_api_key_here

# Application Ports
BACKEND_PORT=8000
FRONTEND_PORT=5173

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379

# Environment
ENVIRONMENT=development
DEBUG=true

# JWT Authentication (Story 11.7)
# IMPORTANT: Generate a secure random secret key for production
# Example: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=dev-secret-key-change-in-production-use-64-char-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
