# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+psycopg://wyckoff_user:changeme@localhost:5432/wyckoff_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Redis Configuration (Task 4: Pattern Performance Analytics Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# Market Data Providers
# Get your Polygon.io API key from: https://polygon.io/dashboard/api-keys
# Free tier: 5 calls/minute (limited)
# Starter tier ($29/mo): Unlimited calls, historical data access
POLYGON_API_KEY=your_polygon_api_key_here

# Twelve Data API (Symbol Validation - Story 21.1)
# Get your API key from: https://twelvedata.com/account/api-keys
# Free tier: 800 API credits/day, 8 requests/minute
TWELVEDATA_API_KEY=your_twelvedata_api_key_here
TWELVEDATA_BASE_URL=https://api.twelvedata.com
TWELVEDATA_RATE_LIMIT=8
TWELVEDATA_TIMEOUT=10

# Data Ingestion Settings
DEFAULT_PROVIDER=polygon
RATE_LIMIT_DELAY=1.0
MAX_RETRIES=3
BATCH_SIZE=500

# Application Settings
BACKEND_PORT=8000
