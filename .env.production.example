# BMAD Wyckoff Production Environment Configuration
# Copy to .env and fill in all required values before deployment

# Environment
ENVIRONMENT=production
DEBUG=false

# Database Configuration (REQUIRED - use strong password)
POSTGRES_USER=bmad
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
POSTGRES_DB=bmad_wyckoff
DATABASE_URL=postgresql+psycopg://bmad:CHANGE_ME_USE_STRONG_PASSWORD@postgres:5432/bmad_wyckoff

# Database Connection Pool (production-tuned)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=1800

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://redis:6379/0
ENABLE_BAR_CACHE=true
BAR_CACHE_TTL=120

# JWT Authentication (REQUIRED - generate with: python -c "import secrets; print(secrets.token_urlsafe(64))")
JWT_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Market Data API Keys (at least one required)
POLYGON_API_KEY=
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
TWELVEDATA_API_KEY=

# Broker Credentials (stored securely, never in plaintext in repo)
# MT5_LOGIN=
# MT5_PASSWORD=
# MT5_SERVER=

# Application Settings
BACKEND_PORT=8000
APP_BASE_URL=https://your-domain.com
CORS_ORIGINS=["https://your-domain.com"]

# Email Notifications
EMAIL_PROVIDER=smtp
EMAIL_FROM_ADDRESS=alerts@your-domain.com

# Logging
LOG_LEVEL=info

# Docker Image Configuration
DOCKER_USERNAME=your-dockerhub-username
VERSION=latest
